package fr.istic.sir.rest;

import javax.ws.rs.FormParam;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import domain.Person;

@Path("/person")
public class PersonService {
	@GET
	@Produces(MediaType.APPLICATION_JSON)
	public Person getPerson() {
		Person p = new Person();
		p.setMail("le@mail.exemple").setNom("Le").setPrenom("Test");
		return p;
	}
	

	@GET
	@Path("/jean-mich")
	@Produces(MediaType.APPLICATION_JSON)
	public Person getPersonJeanMich() {
		Person p = new Person();
		p.setMail("jean_mich@jm.fr").setNom("Jean-Mich").setPrenom("Fédussal");
		return p;
	}
	
	@POST
	@Path("/add")
	@Produces(MediaType.APPLICATION_JSON)
	public Person add(@FormParam("email") String email, @FormParam("nom") String nom, @FormParam("prenom") String prenm){
		
	}
}
